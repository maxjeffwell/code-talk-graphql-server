# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/code_talk_db
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/code_talk_db_test

# JWT Configuration (MUST be 32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_key_at_least_32_characters
JWT_REFRESH_SECRET=your_secure_jwt_refresh_secret_at_least_32_characters

# Redis Configuration (for subscriptions)
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration (comma-separated list)
# Development: http://localhost:3000
# Production: https://code-talk-k8s.el-jefe.me
ALLOWED_ORIGINS=http://localhost:3000,https://code-talk-k8s.el-jefe.me

# AI Gateway Configuration
AI_GATEWAY_URL=http://localhost:8002